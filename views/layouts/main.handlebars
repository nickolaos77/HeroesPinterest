    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <style>
        * {
            box-sizing: border-box;
        }
        /* force scrollbar */
        
        html {
            overflow-y: scroll;
        }
        
        body {
            font-family: sans-serif;
            min-height: 0px;
            background: #DDD;
        }
        /* ---- grid ---- */
        
        .grid {
            max-width: 80%;
            margin-left: 10%;
        }
        /* clear fix */
        
        .grid:after {
            content: '';
            display: block;
            clear: both;
        }
        /* ---- .grid-item ---- */
        
        .grid-sizer,
        .grid-item {
            width: 200px;
            margin: 5px;
        }
        
        .grid-item {
            float: left;
            background-color: white;
            padding: 4px;
        }
        
        .grid-item:hover {
            box-shadow: 2px 4px 4px 2px grey;
        }
        
        .grid-item img {
            display: block;
            width: 100%;
            padding: 2px;
            padding-bottom: 0px;
        }
        
        .fa-star {
            color: darkgreen;
        }
        
        .back {
            background-color: #DDD;
            margin: 2px;
        }
        .navbar-btn{
            margin:0px;
        }
        
        form { padding:5px 10px; width:300px }
        
    </style>
</head>

<body>

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
